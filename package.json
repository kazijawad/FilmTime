{
	"name": "filmtime",
	"version": "1.0.0",
	"description": "A movie database web app.",
	"homepage": "https://filmtime.herokuapp.com",
	"bugs": {
		"url": "https://github.com/kazijawad/FilmTime/issues"
	},
	"author": "Kazi Jawad",
	"license": "MIT",
	"main": "app.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/kazijawad/FilmTime"
	},
	"engines": {
		"node": "10.x",
		"npm": "6.x"
	},
	"scripts": {
		"start": "node app.js",
		"lint": "eslint . --fix",
		"nodemon": "nodemon app.js",
		"test": "npm-run-all --parallel nodemon watch:sass",
		"watch:sass": "node-sass public/sass/main.scss public/css/style.css -w",
		"compile:sass": "node-sass public/sass/main.scss public/css/style.css",
		"compress:sass": "node-sass public/css/style.css public/css/style.css --output-style compressed",
		"build:sass": "npm-run-all compile:sass compress:css"
	},
	"dependencies": {
		"async": "^2.6.2",
		"body-parser": "^1.18.3",
		"connect-flash": "^0.1.1",
		"cookie-parser": "^1.4.4",
		"dotenv": "^7.0.0",
		"ejs": "^2.6.1",
		"express": "^4.16.4",
		"express-session": "^1.15.6",
		"method-override": "^3.0.0",
		"moment": "^2.24.0",
		"mongoose": "^5.4.19",
		"multer": "^1.4.1",
		"nodemailer": "^5.1.1",
		"passport": "^0.4.0",
		"passport-local": "^1.0.0",
		"passport-local-mongoose": "^5.0.1"
	},
	"devDependencies": {
		"node-sass": "^4.11.0",
		"nodemon": "^1.18.10",
		"npm-run-all": "^4.1.5"
	}
}
