<% include ../partials/header %>

<div class="form">
    <h1 class="form__title">Edit Comment</h1>
    <div class="form__body">
        <form action="/movies/<%= movie_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form__item">
                <input class="form__input" type="text" name="comment[text]" placeholder="Comment" value="<%= comment.text %>">
            </div>
            <div class="form__item">
                <button class="btn btn--black">Submit!</button>
            </div>
        </form>
        <a class="btn btn--black" href="/movies">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>