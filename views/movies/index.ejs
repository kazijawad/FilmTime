<% include ../partials/header %>

<section class="movies-cover">
        <h1 class="movies-cover__text">View our community built database of movies</h1>
</section>

<section class="movies-view">
    <% if (noMatch !== null) { %>
        <p class="movies-view__error"><%= noMatch %></p>
    <% } %>

    <% movies.forEach(movie => { %>
        <div class="card">
            <h3 class="card__title"><%= movie.title %></h3>
            <p class="card__description"><%= movie.description %></p>
            <p class="card__link">
                <a class="btn btn--white" href="movies/<%= movie._id %>">More Info</a>
            </p>
        </div>
    <% }); %>
</section>

<% include ../partials/footer %>