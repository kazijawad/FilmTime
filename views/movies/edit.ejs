<% include ../partials/header %>

<div class="form">
    <h1 class="form__title">Edit <%= movie.title %></h1>
    <div class="form__body">
        <form action="/movies/<%= movie._id %>?_method=PUT" method="POST">
            <div class="form__item">
                <label class="form__label" for="title">Title</label>
                <input class="form__input" type="text" name="title" id="title" value="<%= movie.title %>">
            </div>
            <div class="form__item">
                <label class="form__label" for="description">Description</label>
                <input class="form__input" type="text" name="description" id="description" value="<%= movie.description %>">
            </div>
            <div class="form__item">
                <button class="btn btn--black">Update!</button>
            </div>
        </form>
        <a class="btn btn--black" href="/movies">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>