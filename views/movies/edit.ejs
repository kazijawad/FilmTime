<% include ../partials/header %>

<div>
    <h1>Edit <%= movie.title %></h1>
    <div>
        <form action="/movies/<%= movie._id %>?_method=PUT" method="POST">
            <div>
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= movie.title %>">
            </div>
            <div>
                <label for="description">Description</label>
                <input type="text" name="description" id="description" value="<%= movie.description %>">
            </div>
            <div>
                <label for="poster">Poster</label>
                <input type="text" name="poster" id="poster" value="<%= movie.poster %>">
            </div>
            <div>
                <button class="btn btn--purple">Update!</button>
            </div>
        </form>
        <a href="/movies">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>